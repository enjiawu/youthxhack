{
    "manifest_version": 3,
    "name": "Legit Anot",
    "version": "1.0",
    "description": "Checks the safety and legitimacy of links before opening them.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}